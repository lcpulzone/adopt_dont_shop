<h1><%= @application.name %></h1>
<p>Address: <br><%= @application.street_address %><br><%= @application.city %>, <%= @application.state %> <%= @application.zip_code%></p>
<p>Why I would be a great pet owner: <br><%= @application.description %></p>
<p>Application Status: <br> -<%= @application.status %></p>

<% @pets.each do |pet| %>
<%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
<% end %>

<br>

<% unless @application.status == "Pending" %>
  <h2>Add a Pet to this Application!</h2>
  <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <br>
    <%= f.text_field :search %>
    <br>
    <%= f.submit "Search" %>
  <% end %>

  <br>

  <% if !@searched_pets.nil? then %>
    <% @searched_pets.each do |pet| %>
      <%= pet.name %><%= button_to 'Adopt this Pet', "/pet_applications", method: :post, local: true, params: {application: @application.id, pet: pet.id} %>
    <% end %>
  <% end %>

<br>

  <% if @pets.length > 0 %>
    <h2>Why I would make a good home for a pet:</h2>
    <%= form_with url: "/applications/#{@application.id}", method: :post, local: true do |f| %>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, size: '30x6' %>
      <br>
      <%= f.submit "Submit Application"%>
    <% end %>
  <% end %>

<% end %>
